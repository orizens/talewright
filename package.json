    "strip-ansi": "^6.0.1",
    "supports-color": "^7.2.0",
    "supports-hyperlinks": "^3.2.0",
    "thenify": "^3.3.1",
    "thenify-all": "^1.6.0",
    "undici-types": "^6.20.0",
    "unicode-emoji-modifier-base": "^1.0.0",
    "validate-npm-package-name": "^5.0.1",
    "wrap-ansi": "^7.0.0",
    "y18n": "^5.0.8",
    "yargs": "^16.2.0",
    "yargs-parser": "^20.2.9"
  },
  "repository": {
    "type": "git",
